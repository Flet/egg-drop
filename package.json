{
  "name": "lovely",
  "version": "1.0.0",
  "description": "A retro-styled egg drop puzzle game built with Love2D",
  "scripts": {
    "build:love": "bash build.sh",
    "build:web": "npx love.js build/lovely.love web --title \"Lovely - Egg Drop Game\" --memory 33554432",
    "build": "npm run build:love && npm run build:web",
    "predeploy": "npm run build",
    "deploy": "gh-pages -d web",
    "deploy:ci": "gh-pages -d web -u 'github-actions-bot <support+actions@github.com>'",
    "serve": "node serve-web.js"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/yourusername/lovely.git"
  },
  "keywords": [
    "love2d",
    "game",
    "puzzle",
    "retro",
    "egg-drop"
  ],
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "gh-pages": "^6.1.1",
    "http-server": "^14.1.1",
    "love.js": "^11.4.1"
  }
}